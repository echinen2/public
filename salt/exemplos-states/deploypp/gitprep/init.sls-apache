/var/www/.ssh:
  file.directory:
    - user: apache
    - group: apache
    - mode: 750
    - makedirs: True

/var/www/.ssh/config:
  file.managed:
    - source:
      - salt://gitprep/files/ssh.config
    - user: apache
    - group: apache
    - mode: 644

/var/www/.ssh/id_rsa:
  file.managed:
    - source:
      - salt://gitprep/files/id_rsa
    - user: apache
    - group: apache
    - mode: 600


/scripts/tools/git-prep.sh:
  file.managed:
    - source:
      - salt://gitprep/files/git-prep.sh
    - mode: 755

/scripts/tools/git-prep.sh 123:
  cmd.run
